%p#notice= notice

%p
  %b Name:
  = @report.name
%p
  %b Fields:
  = @report.fields
%p
  %b Start date:
  = @report.start_date
%p
  %b End date:
  = @report.end_date
%p
  %b Preset date range:
  = @report.preset_date_range
%p
  %b Activity:
  = @report.activity.titleize
%p
  %b Request Status:
  = Request::STATUSES[@report.request_status]
%p
  %b Item Status:
  = Item::STATUSES[@report.item_status]

- if @results.count == 0
  No Results
  %br
- else
  = render 'results'
  = button_to 'Export', export_report_path(:id => @report.id), method: :get, class: 'btn pull-right btn-primary'
%button{ "data-toggle" => "collapse", :href => "#sql" } Show SQL
.collapse#sql
  %p
  = @sql
%br

= link_to 'Edit', edit_report_path(@report)
\|
= link_to 'Back', reports_path
- if @results.count !=0
  :javascript
      $(document).ready(function() {
        window.table = $('#results').DataTable({ "stateSave": true });
      } );
