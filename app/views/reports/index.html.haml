%h1 Listing reports

%table.reports-list
  %thead
    %tr
      %th Name
      %th Fields
      %th Start date
      %th End date
      %th Preset date range
      %th Activity
      %th Request Status
      %th Item Status
      %th
      %th
      %th

  %tbody
    - @reports.each do |report|
      %tr
        %td= report.name
        %td= report.fields
        %td= report.start_date
        %td= report.end_date
        %td= Report::PRESET_DATE_RANGES[report.preset_date_range]
        %td= report.activity
        %td= report.request_status
        %td= report.item_status
        %td= link_to 'Show', report
        %td= link_to 'Edit', edit_report_path(report)
        %td= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Report', new_report_path
