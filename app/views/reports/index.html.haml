%h1 Listing reports

%table
  %thead
    %tr
      %th Name
      %th Fields
      %th Start date
      %th End date
      %th Activity
      %th Status
      %th
      %th
      %th

  %tbody
    - @reports.each do |report|
      %tr
        %td= report.name
        %td= report.fields
        %td= report.start_date
        %td= report.end_date
        %td= report.activity
        %td= report.status
        %td= link_to 'Show', report
        %td= link_to 'Edit', edit_report_path(report)
        %td= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Report', new_report_path
