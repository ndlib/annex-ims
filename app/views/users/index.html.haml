- if @users.blank?
  %span
    = "There are no current users."
- else
  = form_tag create_users_path, method: "post" do |f|
    %div{ :style => "display: inline-block; width: 100%;" }
      %div{ :style => "float: left;" }
        %input{ name: "user_name", id: "user_name", type: "text",
        required: true }/
      .actions
        = submit_tag 'New User', class: 'btn btn-primary'
  %div
  %table.table.table-striped.condensed.datatable{"id" => "users"}
    %thead
      %tr
        %th= 'User'
        %th= 'Sign in Count'
        %th= 'Last Sign In'
        %th= 'Admin?'
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.username
          %td= user.sign_in_count
          %td= user.last_sign_in_at
          = form_tag update_users_path, method: "put" do |f|
            %td= check_box_tag "admin", "true", user.admin
            %td
              = hidden_field_tag :user_id, user.id
              .actions
                = submit_tag 'Save', class: 'btn btn-primary', id: "user-#{user.id}"
    :javascript
        $(document).ready(function() {
          window.table = $('#users').DataTable();
          $('div.dataTables_filter input').focus();
        } );
