- if @item.blank?
  %div.panel.panel-primary
    %div.panel-heading
      %h3.panel-title= "Item Details"
    %div.panel-body
      %span= "Item Not Found"
- else
  %div.panel.panel-primary
    %div.panel-heading
      %h3.panel-title= "Item Details"
    %div.panel-body
      %table.table.table-striped
        %tbody
          %tr
            %td
              %strong= "Status:"
            %td= @item.status.humanize
          %tr
            %td
              %strong= "Title:"
            %td= @item.title
          %tr
            %td
              %strong= "Author:"
            %td= @item.author
          %tr
            %td
              %strong= "Call Number:"
            %td= @item.call_number
          %tr
            %td
              %strong= "Chron:"
            %td= @item.chron
          %tr
            %td
              %strong= "ISBN/ISSN:"
            %td= @item.isbn_issn
          %tr
            %td
              %strong= "Barcode:"
            %td= @item.barcode
          %tr
            %td
              %strong= "Bib Record:"
            %td= @item.bib_number
          %tr
            %td
              %strong= "Catalog Record:"
            %td
              %a{ href: Rails.configuration.settings.catalog_link + @item.barcode, target: '_blank' }
                View Catalog Record
          %tr
            %td
              %strong= "Shelf Location:"
            %td= (@item.tray.nil? ? 'STAGING' : (@item.tray.shelf.nil? ? 'STAGING' : @item.tray.shelf.barcode))
          %tr
            %td
              %strong= "Tray Number:"
            %td= (@item.tray.nil? ? 'STAGING' : @item.tray.barcode)
          %tr
            %td
              %strong= "Bin:"
            %td= (@item.bin.nil? ? '' : @item.bin.barcode)
  %div.panel.panel-success
    %div.panel-heading
      %h3.panel-title= "Item History"
    %div.panel-body
      %table.table.table-striped
        %thead
          %tr
            %th= "Activity"
            %th= "When"
            %th= "Tray"
            %th= "Who"
        %tbody
          - @history.each do |record|
            %tr
              %td= t("activity_log." + record.action, disposition: !record.data['disposition'].nil? ? record.data['disposition']['code'] : '', comment: !record.data['comment'].nil? ? record.data['comment']['comment'] : '')
              %td= record.action_timestamp.strftime("%m-%d-%Y %I:%M%p")
              %td= ActivityLogQuery.tray_barcode(record)
              %td= record.username
  %div.panel.panel-warning
    %div.panel-heading
      %h3.panel-title= "Item Usage"
    %div.panel-body
      %table.table.table-striped
        %thead
          %tr
            %th= "Activity"
            %th= "Source"
            %th= "Type"
            %th= "Transaction"
            %th= "When"
            %th= "Who"
        %tbody
          - @usage.each do |record|
            %tr
              %td= t("activity_log." + record.action, disposition: !record.data['disposition'].nil? ? record.data['disposition']['code'] : '', comment: !record.data['comment'].nil? ? record.data['comment']['comment'] : '')
              %td= record.data['request']['source'].humanize
              %td= record.data['request']['del_type'].humanize
              %td= record.data['request']['trans']
              %td= record.action_timestamp.strftime("%m-%d-%Y %I:%M%p")
              %td= record.username
  = button_to "Get Updated Record", item_refresh_path(:barcode => @item.barcode), method: :post, class: 'btn pull-left btn-primary'
